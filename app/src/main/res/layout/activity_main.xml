<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bakalian.clifford.corners.MainActivity">


    <Button
        android:id="@+id/singleplayer"
        android:layout_width="200dp"
        android:layout_height="58dp"
        android:layout_above="@+id/multiplayer"
        android:layout_alignStart="@+id/multiplayer"
        android:layout_marginBottom="13dp"
        android:background="@drawable/blank"
        android:onClick="startSinglePlayer"
        android:text="@string/single_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/multiplayer"
        android:layout_width="200dp"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/blank"
        android:onClick="startMultiPlayer"
        android:text="@string/multibutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <Button
        android:id="@+id/puzzles"
        android:layout_width="200dp"
        android:layout_height="58dp"
        android:layout_alignStart="@+id/multiplayer"
        android:layout_below="@+id/multiplayer"
        android:layout_marginTop="24dp"
        android:background="@drawable/blank"
        android:text="@string/puzzle_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/Settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/about"
        android:layout_alignBottom="@+id/about"
        android:layout_alignStart="@+id/puzzles"
        android:background="@drawable/settings"
        android:onClick="settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/about"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/puzzles"
        android:layout_below="@+id/puzzles"
        android:layout_marginTop="66dp"
        android:background="@drawable/about"
        android:onClick="about"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        app:srcCompat="@drawable/title" />

    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/about"
        android:layout_alignTop="@+id/Settings"
        android:layout_centerHorizontal="true"
        android:background="@drawable/stats"
        android:onClick="stats" />

</RelativeLayout>
